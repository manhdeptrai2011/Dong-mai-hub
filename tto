local player = game.Players. LocalPlayer


local banDuration = 1 
local reason = "Cheating | ID 1337"

local message = string.format("You were kicked from this experience: \nYou are banned for [%d yeas ]\nReason: %s\nFuture bans will be PERMANENT. Do not break the rules.",
banDuration,
reason
)
player: Kick(message)